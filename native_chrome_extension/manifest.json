{
    "name": "OpenAdapt DOM Listener",
    "version": "1.0",
    "manifest_version": 3,
    "icons": {
        "128": "./Icons/MLDSAI_logo.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "nativeMessaging"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }]
}